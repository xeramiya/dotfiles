// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["BIZ UDGothic"],
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 16,
  "ui_font_family": "SF Pro",
  "ui_font_fallbacks": ["M PLUS 1"],
  "ui_font_weight": 400,
  "ui_font_size": 16,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "format_on_save": "off",
  "git": {
    "git_gutter": "tracked_files"
  },
  "indent_guides": {
    "enabled": true,
    "active_line_width": 2,
    "coloring": "indent_aware"
  },
  "journal": {
    "hour_format": "hour24"
  },
  "tab_size": 2,
  "terminal": {
    "blinking": "on",
    "font_family": "JetBrains Mono",
    "font_size": 16,
    "line_height": "standard",
    "font_features": {
      "calt": false
    }
  },
  "theme": "One Dark",
  "project_panel": {
    "indent_size": 16,
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "indent_size": 16,
    "auto_fold_dirs": false
  },
  "experimental.theme_overrides": {
    "terminal.background": "#16191B",
    "terminal.foreground": "#FF7C00",
    "players": [
      {
        "cursor": "#FFFFFF"
      }
    ]
  }
}
